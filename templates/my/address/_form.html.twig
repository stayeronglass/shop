<div class="box clearfix">
        {{ form_start(form) }}
        <h3>Кому</h3>
        <div class="row">
            <div class="col-md-12">
                <div class="form-group">
                    {{ form_row(form.recipient) }}

                </div>
            </div>
        </div>
    <hr />
        <h3>Куда</h3>
        <div class="row">
            <div class="col-md-4">
                <div class="form-group">
                    {{ form_row(form.zip) }}
                </div>
            </div>
        </div>

    <div class="row">
        <div class="col-md-12">
            <div class="form-group">
                {{ form_row(form.address) }}
            </div>
        </div>
    </div>
