<!--  *** LOGIN MODAL ***-->
<div id="login-modal" tabindex="-1" role="dialog" aria-labelledby="Login" aria-hidden="true" class="modal fade">
    <div class="modal-dialog modal-sm">
        <div class="modal-content">
            <div class="modal-header">
                <h4 class="modal-title">{% trans %}Customer login{% endtrans %}</h4>
                <button type="button" data-dismiss="modal" aria-hidden="true" class="close">Ã—</button>
            </div>
            <div class="modal-body">
                <form action="{{ path('fos_user_security_check') }}" method="post" enctype="application/x-www-form-urlencoded">
                    <input type="hidden" name="_target_path" value="{{ redirect_url }}" />
                    <input type="hidden" name="_csrf_token" value="{{ csrf_token('authenticate') }}"/>
                    <div class="form-group">
                        <input id="email" name="_username" type="text" placeholder="{% trans %}login{% endtrans %}" class="form-control" required="required">
                    </div>
                    <div class="form-group">
                        <input id="password" name="_password" type="password" placeholder="{% trans %}password{% endtrans %}" class="form-control" required="required">
                    </div>
                    <p class="text-center">
                        <button class="btn btn-outline-primary"><i class="fa fa-sign-in"></i> {% trans %}log in{% endtrans %}</button>
                    </p>
                </form>
                <p class="text-center text-muted">{% trans %}Not registered yet{% endtrans %}?</p>
                <p class="text-center text-muted"><a href="{{ path('fos_user_registration_register') }}"><strong>{% trans %}Register now{% endtrans %}</strong></a>!
                    {% trans %}It is easy and done in 1 minute and gives you access to special discounts and much more{% endtrans %}!
                </p>
            </div>
        </div>
    </div>
</div>
<!-- *** LOGIN MODAL END ***-->
