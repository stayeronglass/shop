{% extends 'base.html.twig' %}

{% block title %}Hello{% endblock %}

{% block body %}
    <div class="box text-center">
        <div class="row">
            <div class="col-md-10 offset-md-1">
                <h1 class="capitalize_first_letter">{% trans %}my account{% endtrans %}</h1>
                <p class="lead capitalize_first_letter">{% trans %}change your personal details or your password here{% endtrans %}.</p>
            </div>
        </div>
    </div>
    <div class="row">
        <!-- *** LEFT COLUMN ***-->
        <div id="customer-orders" class="col-lg-9">
            <div class="box">
                <div class="table-responsive">
                    <table class="table table-hover">
                        <thead>
                        <tr>
                            <th>{% trans %}№{% endtrans %}</th>
                            <th class="capitalize_first_letter" >{% trans %}address{% endtrans %}</th>
                            <th class="capitalize_first_letter">{% trans %}action{% endtrans %}</th>
                        </tr>
                        </thead>
                        <tbody>
                        {% for address in addresses %}
                            <tr>
                                <td># {{ address.id }} </td>
                                <td>{{ address.address }} </td>
                                <td><a href="{{ path('my_address_edit', {'id':address.id }) }} " class="btn btn-outline-primary btn-sm">{% trans %}edit{% endtrans %}</a></td>
                            </tr>
                        {% else %}
                            <tr>
                                <td class="font-weight-bold">{% trans %}no addresses found{% endtrans %}</td>
                            </tr>
                        {% endfor %}
                        </tbody>
                    </table>
                    <div class="text-center">
                        <a href="{{ path('my_address_new') }}" class="btn btn-primary">Новый адрес</a>
                    </div>
                </div>
                <!-- /.table-responsive-->
            </div>
            <!-- /.box-->
        </div>
        <!-- *** LEFT COLUMN END ***-->

        <!--  *** RIGHT COLUMN ***-->
        {{ render(controller('App\\Controller\\MyController::right', { 'active': 'account'} )) }}
        <!--  *** RIGHT COLUMN END ***-->
    </div>

{% endblock %}

