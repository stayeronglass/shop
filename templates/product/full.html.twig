{% extends 'base.html.twig' %}

{% block title %}{{ product.title }} - купить {% endblock %}

{% block body %}
            {{ render(controller('App\\Controller\\DefaultController::breadcrumbs',{ 'node': product.categories[0] } )) }}
            <div class="box text-center">
                <div class="row">
                    <div class="col-md-10 offset-md-1">
                        <h1>{{ product.title }}</h1>
                    </div>
                </div>
            </div>
            <div class="row">
                <div class="col-lg-12">
                    <div id="productMain" class="row">
                        <div class="col-md-6">
                            {% set im = images[0] %}
                            <div id="mainImage"><img src="/upload/{{ im.name[:1] }}/{{ im.name[1:1] }}/{{ im.name}}.{{ im.ext}}" alt="" class="img-fluid"></div>
                            <div class="ribbon sale">
                                <div class="theribbon">РАСПРОДАЖА</div>
                                <div class="ribbon-background"></div>
                            </div>
                            <div class="ribbon new">
                                <div class="theribbon">НОВИНКА</div>
                                <div class="ribbon-background"></div>
                            </div>
                        </div>
                        <div class="col-md-6">
                            <form>
                                <div class="sizes">
                                    <h3>Available sizes</h3>
                                </div>
                                <p class="price">{% trans %}Price{% endtrans %}: {{ product.price }} &#8381;</p>
                                <p class="text-center">
                                    {% if is_granted('IS_AUTHENTICATED_FULLY') %}
                                        <button  id="button_add_cart" type="button" class="btn btn-primary" onclick="add({{ product.id }})"><i class="fa fa-shopping-cart"></i> {% trans %}Add to cart {% endtrans %}</button>
                                    {% else %}
                                        <button type="button" data-toggle="modal" data-target="#login-modal" class="btn btn-outline-secondary mr-1">
                                            <i class="fa fa-shopping-cart"></i> {% trans %}Add to cart{% endtrans %}
                                        </button>
                                    {% endif %}
                                </p>
                            </form>
                            <div id="thumbs" class="row">
                                {% for i in images %}
                                    {% if not loop.first %}
                                        <div class="col-4">
                                            <a href="/upload/{{ i.name[:1] }}/{{ i.name[1:1] }}/{{ i.name}}.{{ i.ext}}" class="thumb">
                                                <img src="/upload/{{ i.name[:1] }}/{{ i.name[1:1] }}/{{ i.name}}.{{ i.ext}}" alt="" class="img-fluid">
                                            </a>
                                        </div>
                                    {% endif %}
                                 {% endfor %}
                            </div>
                        </div>
                    </div>
                    <div id="details" class="box">
                        <h4>{{ product.title }}</h4>
                        {{ product.description | raw }}
                    </div>
                </div>
            </div>
<script type="text/javascript">
    function add(product_id) {
        $('#button_add_cart').attr("disabled", true);
            $.post( "/cart/add",{ product_id: product_id }, function( data ) {
                console.log(data);
                $('#button_add_cart').attr("disabled", false);
            });
    }

</script>
{% endblock %}
