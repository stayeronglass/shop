{% extends 'base.html.twig' %}

{% block title %}Поиск{% endblock %}

{% block body %}
<div class="col-md-9">
    <div class="info-bar">
        <div class="row">
            <div class="col-lg-4 products-showing capitalize_first_letter">{% trans %}showing{% endtrans %} <strong>{{ products.getTotalItemCount }}</strong> {% trans %}of{% endtrans %} <strong>{{ products.getTotalItemCount }}</strong> {% trans %}products{% endtrans %}</div>
        </div>
    </div>

    <div class="row products">
        {% for product in products %}
            {% include 'product/short.html.twig' with {'product': product} %}
        {% endfor %}
    </div>
</div>

<div class="pages">
    <nav aria-label="Page navigation example" class="d-flex justify-content-center mt-4">
        {{ knp_pagination_render(products) }}
    </nav>
</div>

{% endblock %}
