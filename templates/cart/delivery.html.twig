{% extends 'base.html.twig' %}

{% block title %}{{ 'delivery'|trans|capitalize }}{% endblock %}

{% block body %}
    <div class="box text-center">
        <div class="row">
            <div class="col-md-10 offset-md-1">
                <h1 class="capitalize_first_letter">доставка</h1>
            </div>
        </div>
    </div>
    <div class="row">
        <div id="basket" class="col-lg-9">
            <div id="accordion" class="accordion mb-5">
                {{ form_start(form) }}
                {% for key, child in form.children.delivery %}
                    {% if key != 'placeholder' %}
                    <div class="card">
                        <div id="heading0" class="card-header bg-primary">
                            <h5 class="mb-0">
                                <a data-toggle="collapse" data-target="#collapse0" aria-expanded="false" aria-controls="collapse0" href="" class="text-white collapsed">
                                   {{ key }} {{ form_widget(child) }} {{ child.vars.label }} {{ form.children.delivery.vars.choices[key].data.price }} &#x20bd;
                                </a>
                            </h5>
                        </div>
                        <div aria-labelledby="heading0" data-parent="#accordion" id="collapse0" class="collapse" style="">
                            <div class="card-body">
                                <p>{{ form.children.delivery.vars.choices[key].data.description }}</p>
                            </div>
                        </div>
                    </div>
                    {% endif %}
                {% endfor %}
                {{ form_end(form) }}
            </div>
        </div>
    </div>

{% endblock %}