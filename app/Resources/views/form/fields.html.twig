{% block linkupload_widget %}
    {{ block('form_widget_simple') }}

    <script type="text/javascript">
        $("#links").bind('paste', function(e) {
            var self = this;
            setTimeout(function(e) {
                alert($(self).val());
            }, 0);
        });
    </script>

{% endblock %}
