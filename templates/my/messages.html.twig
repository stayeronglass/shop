{% extends 'base.html.twig' %}

{% block title %}Hello {% endblock %}

{% block body %}
    <div class="box text-center">
        <div class="row">
            <div class="col-md-10 offset-md-1">
                <h1 class="capitalize_first_letter">{% trans %}my messages{% endtrans %}</h1>
                <p class="lead capitalize_first_letter">{% trans %}my messages info{% endtrans %}.</p>
            </div>
        </div>
    </div>
    <div class="row">
        <!-- *** LEFT COLUMN ***-->
        <div id="customer-orders" class="col-lg-9">
            <div class="box">
                <div class="table-responsive">
                    <table class="table table-hover">
                        <thead>
                        <tr>
                            <th>{% trans %}â„–{% endtrans %}</th>
                            <th class="capitalize_first_letter" >{% trans %}message{% endtrans %}</th>
                            <th class="capitalize_first_letter">{% trans %}action{% endtrans %}</th>
                        </tr>
                        </thead>
                        <tbody>
                        {% for message in messages %}
                            <tr>
                                <td># {{ message.id }} </td>
                            </tr>
                        {% else %}
                            <tr>
                                <td class="font-weight-bold">{% trans %}no messages found{% endtrans %}</td>
                            </tr>
                        {% endfor %}
                        </tbody>
                    </table>
                </div>
                <!-- /.table-responsive-->
            </div>
            <!-- /.box-->
        </div>
        <!-- *** LEFT COLUMN END ***-->

        <!--  *** RIGHT COLUMN ***-->
        {{ render(controller('App\\Controller\\MyController::right', { 'active': 'message'} )) }}
        <!--  *** RIGHT COLUMN END ***-->
    </div>

{% endblock %}
