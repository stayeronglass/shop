{% extends 'base.html.twig' %}

{% block title %}{% trans %}Cart{% endtrans %}{% endblock %}

{% block body %}
    <div class="box text-center">
        <div class="row">
            <div class="col-md-10 offset-md-1">
                <h1>Shopping cart</h1>
                <p class="text-muted">You currently have 3 item(s) in your cart.</p>
            </div>
        </div>
    </div>
<div class="row">
    <div id="basket" class="col-lg-9">
        <div class="box">
            <form method="get" action="checkout1.html">
                <div class="table-responsive">
                    <table class="table">
                        <thead>
                        <tr>
                            <th colspan="2">Product</th>
                            <th>Quantity</th>
                            <th>Unit price</th>
                            <th>Discount</th>
                            <th colspan="2">Total</th>
                        </tr>
                        </thead>
                        <tbody>
                        {% for c in cart %}
                            <tr>
                                <td><a href="{{ path('product_show', {'id' : c.pid }) }}"><img src="https://d19m59y37dris4.cloudfront.net/minimal/2-0/img/detailsquare.jpg" alt="White Blouse Armani"></a></td>
                                <td><a href="{{ path('product_show', {'id' : c.pid }) }}">{{ c.title}}</a></td>
                                <td>
                                    <input value="{{ c.amount }}" class="form-control" type="number">
                                </td>
                                <td>{{ c.price }}</td>
                                <td>$0.00</td>
                                <td>{{ c.price*c.amount }}</td>
                                <td><a href="#"><i class="fa fa-trash-o"></i></a></td>
                            </tr>
                        {% endfor  %}
                    </table>
                </div>
            </form>
        </div>
    </div>
</div>
{% endblock %}
