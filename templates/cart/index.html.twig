{% extends 'base.html.twig' %}

{% block title %}{% trans %}Cart{% endtrans %}{% endblock %}

{% block body %}
    <div class="box text-center">
        <div class="row">
            <div class="col-md-10 offset-md-1">
                <h1 class="capitalize_first_letter">{% trans %}shopping cart{% endtrans %}</h1>
                <p class="text-muted">{% trans %}You currently have 3 item(s) in your cart.{% endtrans %}</p>
            </div>
        </div>
    </div>
<div class="row">
    <div id="basket" class="col-lg-9">
        <div class="box">
            <form method="get" action="checkout1.html">
                <div class="table-responsive">
                    <table class="table">
                        <thead>
                        <tr>
                            <th colspan="2" class="capitalize_first_letter">{% trans %}product{% endtrans %}</th>
                            <th class="capitalize_first_letter">{% trans %}quantity{% endtrans %}</th>
                            <th class="capitalize_first_letter">{% trans %}unit price{% endtrans %}</th>
                            <th class="capitalize_first_letter">{% trans %}discount{% endtrans %}</th>
                            <th colspan="2" class="capitalize_first_letter">{% trans %}total{% endtrans %}</th>
                        </tr>
                        </thead>
                        <tbody>
                        {% set total = 0 %}
                        {% for c in cart %}
                            {% set total = total +  c.price*c.amount %}
                            <tr>
                                <td><a href="{{ path('product_show', {'id' : c.pid }) }}">
                                        <img src="https://d19m59y37dris4.cloudfront.net/minimal/2-0/img/detailsquare.jpg" alt="White Blouse Armani">
                                    </a>
                                </td>
                                <td><a href="{{ path('product_show', {'id' : c.pid }) }}">{{ c.title}}</a></td>
                                <td>
                                    <input value="{{ c.amount }}" class="form-control" type="number">
                                </td>
                                <td>{{ c.price }}</td>
                                <td>$0.00</td>
                                <td>{{ c.price*c.amount }}</td>
                                <td><a href="{{ path('cart_remove', {'id' : c.id }) }}"><i class="fa fa-trash-o"></i></a></td>
                            </tr>
                        {% endfor  %}
                        <tfoot>
                        <tr>
                            <th colspan="5" class="capitalize_first_letter">{% trans %}total{% endtrans %}</th>
                            <th colspan="2">{{ total }} &#8381;</th>
                        </tr>
                        </tfoot>
                    </table>
                </div>
                <div class="box-footer">
                    <div class="pull-left"><a href="{{ path('main') }}" class="btn btn-outline-white-secondary capitalize_first_letter"><i class="fa fa-chevron-left"></i> Continue shopping</a></div>
                    <div class="pull-right">
                        {% if total %}
                            <button class="btn btn-outline-white-secondary capitalize_first_letter"><i class="fa fa-refresh"></i>{% trans %}update cart{% endtrans %}</button>
                            <button type="submit" class="btn btn-outline-white-primary capitalize_first_letter">{% trans %}proceed to checkout{% endtrans %}<i class="fa fa-chevron-right"></i></button>
                        {% endif %}
                    </div>
                </div>
            </form>
        </div>
    </div>
</div>
{% endblock %}
