{% extends 'base.html.twig' %}

{% block title %}{{ category.name | capitalize }} - купить {% endblock %}

{% block body %}
    {{ render(controller('App\\Controller\\DefaultController::breadcrumbs',{ 'node': category } )) }}
    <div class="box text-center">

            <div class="same-height-row row justify-content-md-center align-items-md-center">
                {% for c in categories %}
                    {% if c.id != category.id  %}
                        <div class="col-md-3 col-6 justify-content-md-center align-items-md-center">
                            <div class="box no-border d-flex justify-content-center align-items-center">
                                <h4><a href="{{ path('category', {'slug':c.slug }) }}">{{ c.name }}</a></h4>
                            </div>
                        </div>
                    {% endif %}
                {% endfor %}
            </div>


            <div class="row">
                <div class="col-md-10 offset-md-1">
                    <h1>{{ category.name }}</h1>
                </div>
            </div>

            <div class="row products">
                {% for product in products %}
                    {% include 'product/short.html.twig' with {'product': product} %}
                {% endfor %}
            </div>

        </div>


    <div class="pages">
        <nav aria-label="Page navigation example" class="d-flex justify-content-center mt-4">
            {{ knp_pagination_render(products) }}
        </nav>
    </div>

    <div class="box text-center">
        <div class="row">
            <div class="col-md-10 offset-md-1">
                {% if 1 is same as (page)  %}
                    <p>
                        {{ category.description }}
                    </p>
                {% endif %}
            </div>
        </div>
    </div>
{% endblock %}
